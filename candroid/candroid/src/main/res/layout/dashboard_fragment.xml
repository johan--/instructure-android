<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dashboardBackground"
    app:columnCount="4"
    app:rowCount="2"
    android:paddingStart="20dp"
    android:paddingLeft="20dp"
    android:paddingEnd="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <!-- Row 1-->
    <ImageView
        android:id="@+id/ivHomework"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:src="@drawable/ic_homework"/>

    <ImageView
        android:id="@+id/ivTextbooks"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:src="@drawable/ic_textbooks"/>

    <ImageView
        android:id="@+id/ivSubjects"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:src="@drawable/ic_subjects"/>

    <ImageView
        android:id="@+id/ivCalendar"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:src="@drawable/ic_calendar"/>

    <!-- Row 2 -->

    <ImageView
        android:id="@+id/ivAnnouncements"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_announcements"/>

    <ImageView
        android:id="@+id/ivMynotes"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_my_notes"/>

    <ImageView
        android:id="@+id/ivCamera"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_camera"/>

    <ImageView
        android:id="@+id/ivCalculator"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_calculator"/>

    <!-- Row 3 -->

    <ImageView
        android:id="@+id/ivWikipedia"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_wikipedia"/>

    <ImageView
        android:id="@+id/ivPlaystore"
        android:clickable="true"
        app:layout_columnWeight="1"
        android:layout_marginTop="14dp"
        android:src="@drawable/playstore_180x180"/>

</android.support.v7.widget.GridLayout>
