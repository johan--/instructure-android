<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fromCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/borderless_item_selector"
            android:drawableTop="@drawable/ic_cv_camera"
            android:text="@string/fromCamera"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            style="@style/TextStyle.Secondary.Dark"/>

        <Button
            android:id="@+id/fromPhotoGallery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/borderless_item_selector"
            android:drawableTop="@drawable/ic_cv_image"
            android:text="@string/fromGallery"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            style="@style/TextStyle.Secondary.Dark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fromDevice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/borderless_item_selector"
            android:drawableTop="@drawable/ic_cv_folder"
            android:text="@string/fromDevice"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            style="@style/TextStyle.Secondary.Dark"/>

        <Button
            android:id="@+id/fromOtherApplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/borderless_item_selector"
            android:drawableTop="@drawable/ic_cv_share"
            android:text="@string/fromOtherApplication"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            style="@style/TextStyle.Secondary.Dark"/>
    </LinearLayout>

</LinearLayout>