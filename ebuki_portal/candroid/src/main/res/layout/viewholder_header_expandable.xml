<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:minHeight="?android:listPreferredItemHeight"
    android:paddingLeft="@dimen/card_header_margins"
    android:paddingRight="@dimen/card_header_margins">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/expand_collapse"
        android:layout_toStartOf="@+id/expand_collapse">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/canvasTextDark"
            android:layout_gravity="start|center_vertical"
            android:textSize="21sp"
            android:textStyle="bold" />

    </FrameLayout>

    <ImageView
        android:id="@+id/expand_collapse"
        android:layout_width="@dimen/card_header_indicator_size"
        android:layout_height="@dimen/card_header_indicator_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:elevation="2dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_cv_expand_white" />

</RelativeLayout>

