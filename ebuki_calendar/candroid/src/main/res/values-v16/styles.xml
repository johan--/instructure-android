<resources>
    <style name="TextStyle" parent="CanvasMaterialTheme_Default">
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/sans_serif</item>
    </style>

    <style name="TextStyle.Primary.SingleLine.Bold">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Primary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">san-serif</item>
    </style>

    <style name="TextStyle.Secondary.SingleLine.Dark">
        <item name="android:textColor">@color/canvasTextDark</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Tertiary.SingleLine.Dark">
        <item name="android:textColor">@color/canvasTextDark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextStyle.Tertiary.SingleLine">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextStyle.Message">
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/canvasTextMedium</item>
    </style>
</resources>