<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:minHeight="?android:listPreferredItemHeight"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/card_inner_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/titleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/gridIconSize"
                android:layout_height="@dimen/gridIconSize"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/icon"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/title"
                style="@style/TextStyle.Primary.CardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/icon"
                android:layout_toStartOf="@+id/edit"/>

            <ImageView
                android:id="@+id/edit"
                android:layout_width="@dimen/gridIconSize"
                android:layout_height="@dimen/gridIconSize"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_cv_edit_dark"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/edit"
                android:layout_centerVertical="true"
                android:padding="4dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleContainer"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/date"
                style="@style/TextStyle.Tertiary.SingleLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:gravity="bottom|start"/>

            <TextView
                android:id="@+id/points"
                style="@style/TextStyle.Secondary.SingleLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/pendingReviewIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/pending_review"
                android:src="@drawable/vd_quiz"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
