<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

    <TextView
        android:id="@+id/select_course"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/TextStyle.Primary"
        android:text="@string/whichCourse"/>

    <TextView
        android:id="@+id/all_teachers"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        style="@style/TextStyle.Secondary"
        android:layout_below="@id/select_course"
        android:text="@string/allTeachers"
        android:layout_marginBottom="10dp"/>

    <Spinner
        android:id="@+id/course_spinner"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/all_teachers"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/message"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@id/course_spinner"
        android:layout_marginBottom="10dp"
        android:hint="@string/composeMessage"/>

</RelativeLayout>